<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.folders.FoldersFragment"
    >

    <TextView
        android:id="@+id/homeFolders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Folders"
        android:textSize="45sp"
        android:textStyle="normal"
        android:gravity="center_vertical|start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/foldersCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/foldersCount"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical|start"
        android:text="@string/empty"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFolders"
        />

    <ImageButton
        android:id="@+id/newNote"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/create"
        android:background="#00000000"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/homeFolders"
        app:layout_constraintEnd_toStartOf="@+id/editFolder"
        />

    <ImageButton
        android:id="@+id/editFolder"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="-5dp"
        android:src="@drawable/edit"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFolders"
        />

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foldersCount"
        app:layout_constraintBottom_toTopOf="@+id/folderContainer">

        <ImageView
            android:id="@+id/search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/search"
            android:background="#00000000"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical|start"
            />

        <EditText
            android:id="@+id/searchTerm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Search Term"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_gravity="start"
            android:gravity="center_vertical|start"
            android:inputType="text"
            android:singleLine="true"
            android:backgroundTint="#333333"
            />

        <ImageView
            android:id="@+id/sort"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/sort"
            android:background="#00000000"
            android:layout_marginStart="145dp"
            android:layout_marginEnd="-5dp"
            android:layout_gravity="center_vertical|end"
            app:layout_constraintStart_toEndOf="@id/searchTerm"
            app:layout_constraintEnd_toStartOf="@+id/sortBy"
            />

        <Spinner
            android:id="@+id/sortBy"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="start"
            android:layout_gravity="start|center_vertical"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            android:background="@drawable/ic_spinner"
            app:layout_constraintStart_toEndOf="@id/sort"
            app:layout_constraintEnd_toStartOf="@id/sortOrder"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#a9a9a9"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <ImageButton
            android:id="@+id/sortOrder"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/order"
            android:background="#00000000"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical|end"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/folderContainer"
        android:layout_width="0dp"
        android:layout_height="470dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        />

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:divider="?android:listDivider"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/folderContainer">

        <Button
            android:id="@+id/createFolder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/folder"
            android:drawableTint="@drawable/action_buttons"
            android:enabled="true"
            android:layout_weight="0.2"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="7dp"
            android:background="#00000000"
            android:text="New"
            android:textSize="11sp"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/deleteFolder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/delete"
            android:drawableTint="@drawable/action_buttons"
            android:enabled="false"
            android:layout_weight="0.2"
            android:paddingTop="7dp"
            android:background="#00000000"
            android:text="@string/delete"
            android:textSize="11sp"
            android:textStyle="normal"
            android:gravity="bottom|center_horizontal"
            />

        <Button
            android:id="@+id/deselectAllFolders"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/deselect"
            android:drawableTint="@drawable/action_buttons"
            android:enabled="false"
            android:layout_weight="0.2"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="7dp"
            android:background="#00000000"
            android:text="@string/deselectAll"
            android:textSize="11sp"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/selectAllFolders"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/select"
            android:drawableTint="@drawable/action_buttons"
            android:enabled="true"
            android:layout_weight="0.2"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="7dp"
            android:background="#00000000"
            android:text="@string/selectAll"
            android:textSize="11sp"
            android:textStyle="normal"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>